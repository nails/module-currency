{
    "name": "nails/module-currency",
    "keywords": [
        "Nails",
        "Shed Collective",
        "CodeIgniter",
        "Currency Module"
    ],
    "homepage": "http://nailsapp.co.uk/modules/currency",
    "description": "This is the \"Currency\" module for Nails; it brings support for currency and currency conversion.",
    "license": "MIT",
    "authors": [
        {
            "name": "Pablo de la Pena",
            "email": "p@nailsapp.co.uk",
            "homepage": "http://nailsapp.co.uk",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "hello@nailsapp.co.uk"
    },
    "require": {
        "nails/module-console": "dev-develop",
    },
    "require-dev": {
        "phpunit/phpunit": "9.*"
    },
    "extra": {
        "nails": {
            "moduleName": "currency",
            "type": "module",
            "namespace": "Nails\\Currency\\",
            "data": {
                "settings": [
                    {
                        "key": "aEnabledCurrencies",
                        "label": "Enabled Currencies",
                        "info": "Which currencies should be enabled for use"
                    }
                ]
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Nails\\Currency\\": "src/"
        }
    }
}
